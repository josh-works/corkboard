<div class="row col-md-8 col-md-offset-2">
  <h1><%= @bid.project.service.name %></h1>

  <div class="panel panel-default">
    <% if @bid.messages.any? %>
      <div class="panel-body" id="messages">
        <%= render partial: 'messages/message', collection: @bid.messages%>
      </div>
    <%else%>
      <div class="panel-body hidden" id="messages">
      </div>
    <%end%>
  </div>

  <%= render partial: 'messages/message_form', locals: {message: @message, bid: @bid}%>
</div>
